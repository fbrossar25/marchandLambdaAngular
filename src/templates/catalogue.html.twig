{% extends 'app.html.twig' %}
{% block head %}
    <link rel="stylesheet" type="text/css" href="/src/assets/css/catalogue.css"/>
{% endblock %}
{% block main %}
    <div class="container">
        {% if articles is empty %}
            <h2>Pas de r√©sultats</h2>
        {% else %}
            {% for article in articles %}
                {% include 'article-card.html.twig' with article %}
                {% set count = count + 1 %}
            {% endfor %}
        {% endif %}
    </div>
    {% include 'pagination.html.twig' with pagination %}
    {% if session.admin %}
        {% include 'modale-suppression.html.twig' %}
        {% include 'modale-modification.html.twig' %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
        <script src="/src/assets/js/catalogue.js"></script>
    {% endif %}
{% endblock %}
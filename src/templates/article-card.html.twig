{% if article.urlImage is not empty %}
    {% set imgHref = article.urlImage %}
{% else %}
    {% set imgHref = 'http://placehold.it/700x400' %}
{% endif %}
<div class="card mb-4" id="article-{{ article.idArticle }}">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img class="card-img" src="{{ imgHref }}" alt="{{ article.nom }}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title text-primary">{{ article.nom }}</h4>
                <h5>{{ article.prix }}â‚¬</h5>
                <p class="card-text">{{ article.description }}</p>
            </div>
            {% if session.admin %}
                <div class="card-footer">
                    <div class="btn-group btn-group-md col-md-8 offset-md-8" role="group">
                        <button type="button"
                                class="btn btn-primary mx-2 rounded admin-btn-modifier"
                                data-toggle="modal"
                                data-target="#admin-modale-modification"
                                data-id="{{ article.idArticle }}">
                            Modifier
                        </button>
                        <button type="button"
                                class="btn btn-danger mx-2 rounded admin-btn-supprimer"
                                data-toggle="modal"
                                data-target="#admin-modale-suppression"
                                data-id="{{ article.idArticle }}">
                            Supprimer
                        </button>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
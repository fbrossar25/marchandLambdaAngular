{% extends 'app.html.twig' %}
{% block head %}
<link rel="stylesheet" type="text/css" href="/src/assets/css/formulaire.css" />
{% endblock %}
{% block main %}
<div class="container">
    <form id="editAccount" class="form-horizontal" role="form" action="/compte" method="post">
        <h2>Éditer mes informations</h2>
        <div class="form-group">
            <label for="firstName" class="col-md-6 control-label">Prénom*</label>
            <div class="col-sm-12">
                <input type="text" id="firstName" name="firstName" placeholder="Prénom" class="form-control" value="{{compte.prenom}}" required autofocus>
            </div>
        </div>
        <div class="form-group">
            <label for="lastName" class="col-md-6 control-label">Nom*</label>
            <div class="col-sm-12">
                <input type="text" id="lastName" name="lastName" placeholder="Nom" class="form-control" value="{{compte.nom}}" required autofocus>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-6 control-label">Email*</label>
            <div class="col-sm-12">
                <input type="email" id="email" name="email" placeholder="Email" class="form-control" value="{{compte.email}}" required autofocus>
            </div>
        </div>
        <div class="form-group">
            <label for="pass" class="col-md-6 control-label">Mot de passe*</label>
            <div class="col-sm-12">
                <input type="password" id="pass" name="pass" placeholder="Mot de passe" class="form-control" required autofocus minlength="6">
            </div>
        </div>
        <div class="form-group">
            <label for="phoneNumber" class="col-md-6 control-label">Numéro de téléphone</label>
            <div class="col-sm-12">
                <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Numéro de téléphone" class="form-control" value="{{compte.telephone}}">
            </div>
        </div>
        <div class="form-group">
            <label for="city" class="col-md-6 control-label">Commune*</label>
            <div class="col-sm-12">
                <input type="text" id="city" name="city" placeholder="Commune" class="form-control" value="{{compte.commune}}" required>
            </div>
        </div>
        <div class="form-group">
            <label for="postalCode" class="col-md-6 control-label">Code postal*</label>
            <div class="col-sm-12">
                <input type="text" id="postalCode" name="postalCode" placeholder="Code postal" class="form-control" value="{{compte.codePostal}}" required>
            </div>
        </div>
        <div class="form-group">
            <label for="street" class="col-md-6 control-label">Libellé de voie*</label>
            <div class="col-sm-12">
                <input type="text" id="street" name="street" placeholder="Libellé de voie" class="form-control" value="{{compte.voie}}" required>
            </div>
        </div>
        <div class="form-group">
            <label for="streetNo" class="col-md-6 control-label">Numéro de voie*</label>
            <div class="col-sm-12">
                <input type="text" id="streetNo" name="streetNo" placeholder="Numéro de voie" class="form-control" value="{{compte.numeroVoie}}" required>
            </div>
        </div>
        <div class="form-group">
            <label for="newPassword" class="col-md-6 control-label">Nouveau mot de passe</label>
            <div class="col-sm-12">
                <input type="password" id="newPassword" name="newPassword" placeholder="Nouveau mot de passe" class="form-control" autofocus minlength="6">
            </div>
        </div>
        <div class="form-group">
            <label for="confirm" class="col-md-6 control-label">Confimer le nouveau mot de passe</label>
            <div class="col-sm-12">
                <input type="password" id="confirm" name="confirm" placeholder="Confimer le mot de passe" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12 col-sm-offset-3">
                <span class="help-block">*Champs requis</span>
            </div>
        </div>
        <!-- erreur : {{ erreur }}-->
        {% if erreur is same as(true) %}
        <div id="wrong-pass" class="form-group alert alert-danger">
            <div class="col-sm-12 col-sm-offset-3">
                Le mot de passe est erroné
            </div>
        </div>
        {% elseif erreur is same as(false) %}
        <div id="success" class="form-group alert alert-success">
            <div class="col-sm-12 col-sm-offset-3">
                Compte mis à jour avec succès
            </div>
        </div>
        {% endif %}
        <div id="error" class="form-group alert alert-danger">
            <div class="col-sm-12 col-sm-offset-3">
                Au moins un champs requis requiert votre attention
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Valider les modifications</button>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script src="/src/assets/js/compte.js"></script>
{% endblock %}
 